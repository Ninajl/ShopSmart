<div class="container">
  <div class="jumbotron">
    <h1 class="brand">ShopSmart</h1>
    <h4>Your online shopping buddy</h4>
  </div>
  <div class="col-md-4 col-md-offset-4" id='home'>
    <form role="search">
         <div class="form-group">
           <input type="text" class="form-control" placeholder="Search" id='search_field' autofocus>
         </div>
         <div class='text-center'>
           <button type="submit" class="btn btn-default" id='home_search' data-toggle="modal" data-target="#myModal">Search</button>
         </div>
    </form>
  </div>
</div>

  <!-- Modal -->
  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-body text-center">
          <%= image_tag('loading_cart.gif', class: 'loading-gif')  %>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal -->
  <div class="modal fade" id="myModal2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-body text-center">
          <form role="search">
               <div class="form-group">
                 <input type="text" class="form-control" placeholder="Search" id='search_field2' autofocus>
               </div>
               <div class='text-center'>
                 <button type="submit" class="btn btn-default" id='home_search2' >Search</button>
               </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <div class='col-md-12'>
    <div class="row">
      <div class="col-md-4 logo">
        <img src="http://www.seomofo.com/downloads/new-google-logo-knockoff.png" alt="" />
      </div>
      <div class="col-md-4 logo">
        <img src="http://img1.wikia.nocookie.net/__cb20100929014950/logopedia/images/c/cd/500px-Amazon_com_logo_svg.png" alt="" />
      </div>
      <div class="col-md-4 logo">
        <img src="http://upload.wikimedia.org/wikipedia/commons/4/48/EBay_logo.png" alt="" />
      </div>
    </div>
  <div id='results'>

    <div class="col-md-4" id='google'>

      <%= image_tag('cart.png', class: 'google-logo') %>
      <div class="title">
        <h3 class='text-center' >Google</h3>

      </div>
        </div>

    <div class='col-md-4' id='amazon'>
      <%= image_tag('500px-Amazon_com_logo_svg.png', class: 'amazon-logo') %>

      <div class="title">
        <h3 class='text-center'>Amazon</h3>
      </div>
    </div>

    <div class='col-md-4' id='ebay'>
      <%= image_tag('EBay_logo.png', class: 'ebay-logo') %>

      <div class="title">
        <h3 class='text-center'>Ebay</h3>
      </div>
    </div>

  </div>


  </div>
